@using Heatington.Web.Client.Pages
@using System.Resources
@using ResourceManager = Heatington.Web.Client.Pages.ResourceManager

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="Boiler.Name" Label="Name" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="Boiler.MaxHeat" Label="Max Heat" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="Boiler.MaxElectricity" Label="Max Electricity" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="Boiler.ProductionCosts" Label="Production Costs" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="Boiler.CO2Emissions" Label="CO2 Emissions" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="Boiler.PrimaryEnergy" Label="Gas Consumption" Variant="Variant.Outlined" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Size="Size.Large" Variant="Variant.Filled" OnClick="EditBoiler">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public ResourceManager.Boiler Boiler{ get; set; }

    void EditBoiler()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
}
