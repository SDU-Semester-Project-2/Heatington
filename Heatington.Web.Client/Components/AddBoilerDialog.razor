@using Heatington.Web.Client.Pages
@using System.Resources
@using ResourceManager = Heatington.Web.Client.Pages.ResourceManager
@* AddBoilerDialog Component *@

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h5">Add a new boiler.</MudText>
        <MudTextField @bind-Value="@NewBoiler.Name" Label="Name" Variant="Variant.Text" />
        <MudTextField @bind-Value="NewBoiler.MaxHeat" Label="Max Heat" Variant="Variant.Text" />
        <MudTextField @bind-Value="NewBoiler.MaxElectricity" Label="Max Electricity" Variant="Variant.Text" />
        <MudTextField @bind-Value="NewBoiler.ProductionCosts" Label="Production Costs" Variant="Variant.Text" />
        <MudTextField @bind-Value="NewBoiler.CO2Emissions" Label="CO2 Emissions" Variant="Variant.Text" />
        <MudTextField @bind-Value="NewBoiler.PrimaryEnergy" Label="Gas Consumption" Variant="Variant.Text" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Size="Size.Large" Variant="Variant.Filled" OnClick="AddBoiler">Add Boiler</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public List<ResourceManager.Boiler> Boilers { get; set; }

    ResourceManager.Boiler NewBoiler = new ResourceManager.Boiler();

    void AddBoiler() // TODO: Implement this method
    {
        Boilers.Add(NewBoiler);
        NewBoiler = new ResourceManager.Boiler();
        MudDialog.Close(DialogResult.Ok(true));
    }
}
