@using Heatington.Web.Client.Pages
@using System.Resources
@using ResourceManager = Heatington.Web.Client.Pages.ResourceManager
@* AddBoilerDialog Component *@

<MudDialog>
    <DialogContent>
        <InputFile OnChange="HandleImageUpload" accept=".jpg, .jpeg, .png" />
        <MudTextField @bind-Value="@NewBoiler.Name" Label="Name" Variant="Variant.Outlined"/>
        <MudTextField @bind-Value="NewBoiler.MaxHeat" Label="Max Heat" Variant="Variant.Outlined"/>
        <MudTextField @bind-Value="NewBoiler.MaxElectricity" Label="Max Electricity" Variant="Variant.Outlined"/>
        <MudTextField @bind-Value="NewBoiler.ProductionCosts" Label="Production Costs" Variant="Variant.Outlined"/>
        <MudTextField @bind-Value="NewBoiler.CO2Emissions" Label="CO2 Emissions" Variant="Variant.Outlined"/>
        <MudTextField @bind-Value="NewBoiler.PrimaryEnergy" Label="Gas Consumption" Variant="Variant.Outlined"/>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Size="Size.Large" Variant="Variant.Filled" OnClick="AddBoiler">Add</MudButton>
    </DialogActions>
</MudDialog>

@code {
    string imageBase64;

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public List<ResourceManager.Boiler> Boilers { get; set; }

    ResourceManager.Boiler NewBoiler = new ResourceManager.Boiler();

    async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        var format = "image/png";
        using var memoryStream = new MemoryStream();
        await e.File.OpenReadStream(maxAllowedSize: 1024 * 1024).CopyToAsync(memoryStream);
        var byteArray = memoryStream.ToArray();
        imageBase64 = Convert.ToBase64String(byteArray);
    }
    void AddBoiler()
    {
        NewBoiler.ImageBase64 = imageBase64;
        Boilers.Add(NewBoiler);
        NewBoiler = new ResourceManager.Boiler();
        MudDialog.Close(DialogResult.Ok(true));
    }
}
